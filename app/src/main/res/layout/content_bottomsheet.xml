<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomsheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:showIn="@layout/maps_layout"
    app:behavior_hideable="true"
    app:behavior_peekHeight="100dp"
    android:layout_marginTop="30dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/room_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:background="@drawable/dummy"
        android:scaleType="center"/>


    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginTop="-24dp"-->
        <!--android:elevation="16dp"-->
        <!--android:id="@+id/floatingActionButton"-->
        <!--android:layout_below="@+id/room_image"/>-->

    <LinearLayout
        android:id="@+id/room_linearlayout"
        android:layout_below="@+id/room_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/red_color"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room No : 208"
            android:textColor="@android:color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:padding="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electronics and Communication Engineering\nNational Institute of Technology Delhi"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="4dp"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>
    
    <TextView
        android:layout_below="@+id/room_linearlayout"
        android:id="@+id/available_textview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Available Devices"
        android:gravity="center"
        android:background="@android:color/white"/>
    
    <LinearLayout
        android:layout_below="@+id/available_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wallet_holo_blue_light"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Light"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#123456"
                android:gravity="center"/>

            <Switch
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:targetApi="ice_cream_sandwich"
                android:gravity="left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Light"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#123456"
                android:gravity="center"/>

            <Switch
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:targetApi="ice_cream_sandwich"
                android:gravity="left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Light"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#123456"
                android:gravity="center"/>

            <Switch
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:targetApi="ice_cream_sandwich"/>

        </LinearLayout>

    </LinearLayout>
        
</RelativeLayout>