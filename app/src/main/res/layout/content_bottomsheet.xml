<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:showIn="@layout/maps_layout"
    app:behavior_hideable="true"
    app:behavior_peekHeight="1000dp"
    android:layout_marginTop="30dp"
    android:elevation="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/room_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:background="@drawable/dummy"
        android:scaleType="center"/>


    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginTop="-24dp"-->
        <!--android:elevation="16dp"-->
        <!--android:id="@+id/floatingActionButton"-->
        <!--android:layout_below="@+id/room_image"/>-->

    <LinearLayout
        android:id="@+id/room_linearlayout"
        android:layout_below="@+id/room_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/room_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_room"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/department_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/department_name"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <View
        android:layout_below="@+id/room_linearlayout"
        android:id="@+id/room_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_light_blue"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        />


    <TextView
        android:layout_below="@+id/room_divider"
        android:id="@+id/available_textview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Available Devices"
        android:textColor="@color/color_dark_blue"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@android:color/white"/>
    
    <LinearLayout
        android:id="@+id/devices_layout"
        android:layout_below="@+id/available_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_light_blue"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:background="@drawable/devices_background">


                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_audiotrack_light"
                    android:scaleType="center"
                    android:layout_marginRight="-18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Light"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_dark_red"
                    android:gravity="center" />

            </LinearLayout>

            <Switch
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:targetApi="ice_cream_sandwich"
                android:gravity="left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:background="@drawable/devices_background"
                android:clickable="true">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_audiotrack_light"
                    android:scaleType="center"
                    android:layout_marginRight="-18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Light"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_dark_red"
                    android:gravity="center" />

            </LinearLayout>

            <Switch
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:targetApi="ice_cream_sandwich"
                android:gravity="left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:background="@drawable/devices_background">


                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_audiotrack_light"
                    android:scaleType="center"
                    android:layout_marginRight="-18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Light"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_dark_red"
                    android:gravity="center" />

            </LinearLayout>

            <Switch
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:targetApi="ice_cream_sandwich"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@+id/devices_layout"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_light_blue"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:layout_below="@+id/divider"
        android:id="@+id/timetable_textview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Timetable"
        android:textColor="@color/color_dark_blue"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@android:color/white"/>

    <View
        android:layout_below="@+id/timetable_textview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_light_blue"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />


</RelativeLayout>